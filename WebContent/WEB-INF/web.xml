<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>movie-web</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/views/main.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>TheaterServlet</servlet-name>
    <servlet-class>com.movie.test.servlet.TheaterServlet</servlet-class> 
  </servlet>
  
  <servlet-mapping>
    <servlet-name>TheaterServlet</servlet-name>
    <url-pattern>/theater/*</url-pattern>
  </servlet-mapping>
  
</web-app>